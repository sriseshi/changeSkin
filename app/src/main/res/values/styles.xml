<resources>

    <!-- Base application theme. -->
    <style name="LightAppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="txt_color">#000000</item>
        <item name="bg_color">#FFFFFF</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="DarkAppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="txt_color">#FFFFFF</item>
        <item name="bg_color">#000000</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>
</resources>
